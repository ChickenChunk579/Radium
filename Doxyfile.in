# Doxyfile.in - Template used by CMake to generate Doxygen config

@INCLUDE_PATH = @CMAKE_SOURCE_DIR@

# Use the Awesome Doxygen CSS theme
HTML_EXTRA_STYLESHEET = @AWESOME_CSS_DIR@/doxygen-awesome.css
HTML_EXTRA_FILES      = @AWESOME_CSS_DIR@/doxygen-awesome-darkmode-toggle.js
HTML_COLORSTYLE_HUE   = 210
HTML_COLORSTYLE_SAT   = 100
HTML_COLORSTYLE_GAMMA = 80


PROJECT_NAME           = @PROJECT_NAME@
PROJECT_NUMBER         = @PROJECT_VERSION@
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/docs
INPUT                  = @CMAKE_SOURCE_DIR@/src \
                         @CMAKE_SOURCE_DIR@/README.md
RECURSIVE              = YES
GENERATE_LATEX         = NO
GENERATE_HTML          = YES
EXTRACT_ALL            = YES
QUIET                  = YES
USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md
EXCLUDE = \
    @CMAKE_SOURCE_DIR@/src/Radium/json.hpp